/* ADD NEW EVENT CSS */
.events-add-new {
    position: relative;
}
.events-add-new {
  background-image: url(<%= asset_path('login.jpg') %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.events-add-new .container-logo:after {
  content: '';
  background-image: url(<%= asset_path('logo.png') %>);
  filter: brightness(0) invert(.89);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  width: 130px;
  height: 163px;
  position: absolute;
  top: 8px;
}
/* END CSS FOR ADD NEW EVENT */
