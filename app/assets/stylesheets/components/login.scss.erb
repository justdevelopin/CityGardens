.sing-in-wrapper {
  background-image: url(<%= asset_path('login.jpg') %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.sing-in-wrapper {
    height: calc(100vh - 52px);
    position: absolute;
    left: 0px;
    right: 0px;
}


.form-inputs input {
    padding: 10px 0 10px 15px;
    font-size: 17px;
    font-weight: 300;
    /* color: #ddd!important; */
    letter-spacing: 1px;
    border: none;
    background: #ffffff2e;
    box-sizing: border-box;
    /* font-family: 'Mukta', sans-serif; */
    width: calc(100% - 3rem);
    outline: none;
    font-size: 16px;
    color: #fff!important;
    border-radius: 1.8rem;
    border: solid 1px #ffffff4d;
    margin-left: 1.5rem;
    margin-right: 1.5rem;
}
.form-inputs input:active, .form-inputs input:focus {
    background: #ffffffa3;
    border: solid 1px #316d09;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(126, 239, 104, 0.6);
    outline: 0 none;
}

.form-inputs input::placeholder {
    /* font-size: 20px; */
    color: #ffffffe8;
}
.shared-links-singup {
    width: calc(100% - 3rem);
    background: #97B140;
    padding: 0.8rem;
    border-radius: 1.8rem;
    text-align: center;
    margin-left: 1.5rem;
    margin-right: 1.5rem;
    color: #2f3f1d;
    text-decoration: none;
}
.form-title {
    width: calc(100% - 3rem);
    margin-left: 1.5rem;
    margin-right: 1.5rem;
    text-align: center;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    color: #9aa390;
}

.shared-links-forgot-password {
    width: calc(100% - 3rem);
    margin-left: 1.5rem;
    margin-right: 1.5rem;
    text-align: center;
    margin-top: 0.5rem;
    color: #fff;
    font-size: 14px;
}

.registry-form-submit input {
    width: calc(100% - 3rem);
    margin-left: 1.5rem;
    margin-right: 1.5rem;
    margin-bottom: 1.5rem;
    background: #fff;
    border-radius: 1.8rem;
    padding: 0.8rem;
}
.registry-input-remember .form-check {
    width: calc(100% - 3rem);
    margin-left: 1.5rem;
    margin-right: 1.5rem;
    color: #fff;
    margin-bottom: 1.5rem;
    border-bottom: solid 1px #ffffff47;
    padding-bottom: 1.5rem;
    padding-top: 0.6rem;
}

.form-container-registry .simple_form {
    margin-top: 50%;
}

a {
  text-decoration: none;
  color: #2f3f1d;
}

.shared-links-forgot-password a {
  color: #a7b2a5;
}

label.form-check-label.boolean.optional {
    color: #cfcfcf;
}
