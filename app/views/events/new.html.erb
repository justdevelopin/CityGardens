
<div class="container">
  <h3 class="tirtuary-h">Please fill in the information about your event</h3>

  <%= simple_form_for @event do |f| %>
    <%= f.input :name, wrapper_html: {class: "f-input"} %>
    <%= f.input :description, wrapper_html: {class: "f-input"} %>
    <%= f.input :date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :max_attendees, wrapper_html: {class: "f-input"} %>
    <%= f.button :submit, wrapper_html: {class: "action-button"} %>
  <% end %>
</div>
