<div class="events-show">

  <section class="section-show">
    <div class="show-container">
      <div class="show-photo-column">
        <% if @event.photo.attached? %>
            <%= cl_image_tag @event.photo.key, class: "show-photo" %>
          <% else %>
            <%= image_tag "photo1.jpg", class: "show-photo" %>
          <% end %>
      </div>
      <div class="show-description-column mx-3 mt-3">
        <h3 class="show-event-title"><strong><%= @event.name %></strong></h3>
        <p class="event-address"><%= @event.garden.location %></p>
        <p class="show-description"><%= @event.description %></p>
        <p class="show-description"> Total participans: <%= @event.bookings.sum(:attendees)%></p>
        <p class="show-description"><%= @event.date.strftime("%d %B") %></p>

      </div>
    </div>
  </section>

  <div class="event-container">


  <div class="event-booking-form mx-3">
    <% if @already_booked %>
      <p><strong><i class="fa-solid fa-check"></i>You're already signed up!</strong></p>
    <% else %>
      <%= simple_form_for [@event, @booking] do |f| %>
        <%= f.input :attendees %>
        <%= f.submit "Finalize booking", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>

  </div>
</div>
