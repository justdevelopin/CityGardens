<div class="event-card-index" data-controller="bookmarks">
<div class="img-container">
  <% if garden.photos.any? %>
    <%= link_to garden_path(garden) do %>
      <%= image_tag garden.photos.first, alt: garden.name, class: 'd-block w-100' %>
    <% end %>
  <% else %>
    <%= link_to garden_path(garden) do %>
      <%= image_tag "logo.png", alt: "default image", class: 'd-block w-100' %>
    <% end %>
  <% end %>
</div>
  <h2><%= garden.name %></h2>


  <div class="events-atribute-list">
    <span class="event-atribute">
      <div class="svg-icons-events-attribute">
          <svg xmlns="http://www.w3.org/2000/svg" fill="#0a0e06" width="800px" height="800px" viewBox="0 0 32 32" version="1.1">
          <path d="M16.114-0.011c-6.559 0-12.114 5.587-12.114 12.204 0 6.93 6.439 14.017 10.77 18.998 0.017 0.020 0.717 0.797 1.579 0.797h0.076c0.863 0 1.558-0.777 1.575-0.797 4.064-4.672 10-12.377 10-18.998 0-6.618-4.333-12.204-11.886-12.204zM16.515 29.849c-0.035 0.035-0.086 0.074-0.131 0.107-0.046-0.032-0.096-0.072-0.133-0.107l-0.523-0.602c-4.106-4.71-9.729-11.161-9.729-17.055 0-5.532 4.632-10.205 10.114-10.205 6.829 0 9.886 5.125 9.886 10.205 0 4.474-3.192 10.416-9.485 17.657zM16.035 6.044c-3.313 0-6 2.686-6 6s2.687 6 6 6 6-2.687 6-6-2.686-6-6-6zM16.035 16.044c-2.206 0-4.046-1.838-4.046-4.044s1.794-4 4-4c2.207 0 4 1.794 4 4 0.001 2.206-1.747 4.044-3.954 4.044z"/>
        </svg>
      </div>
      <%= garden.location%>

    </span>
      <% if current_user && current_user.bookmarks.pluck(:garden_id).include?(garden.id)%>
        <% bookmark = Bookmark.find_by(garden: garden, user: current_user) %>
        <%= link_to '<i class="fa-solid fa-heart" style="color: #0a0e06;"></i>'.html_safe, "#", data: {gardenId: bookmark.id, action: 'click->bookmarks#deleteFavourited'}%>
      <% else %>
        <%= link_to '<i class="fa-regular fa-heart" style="color: #0a0e06;"></i>'.html_safe, "#", data: {gardenId: garden.id, action: 'click->bookmarks#favourited'}%>
      <% end %>
    <span class="event-atribute">
    </span>
  </div>
  <div class="card-description">
    <p><%= garden.description.split(/(?<=\.)\s+|$/).first %></p>
  </div>
</div>
