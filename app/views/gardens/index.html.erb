<% if @gardens.any? %>
  <div class="garden-grid">
    <% @gardens.each do |garden| %>
      <%= link_to garden_path(garden) do %>
        <div class="event-card-index">
          <div class="img-container">
            <% if garden.photos.attached? %>
              <%= image_tag garden.photos.first, alt: garden.name, class: 'd-block w-100' %>
            <% else %>
              <%= image_tag("logo.png", alt: "default image", class: 'd-block w-100') %>
            <% end %>
          </div>
          <div class="card-content">
            <h2><%= garden.name %></h2>
            <p class="garden-address"><%= garden.location %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p>No gardens found.</p>
<% end %>
