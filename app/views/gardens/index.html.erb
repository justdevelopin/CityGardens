<% if @gardens.any? %>
  <div class="garden-grid">
    <% @gardens.each do |garden| %>
      <div class="garden-card">
        <% if garden.photos.attached? %>
          <%= image_tag garden.photos.first, alt: garden.name, class: 'garden-image' %>
        <% else %>
          <%= image_tag("logo.png", alt: "default image") %> 
        <% end %>
        <%= link_to garden.name, garden, class: 'garden-name' %>
        <p class="garden-address"><%= garden.location %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No gardens found.</p>
<% end %>
