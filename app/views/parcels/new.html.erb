<div class="parcel-container">
  <h1>Create New Parcel</h1>

<%= form_with model: [@garden, @parcel], local: true do |form| %>
    <% if @parcel.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@parcel.errors.count, "error") %> prohibited this parcel from being saved:</h2>
        <ul>
          <% @parcel.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label :size %>
      <%= form.number_field :size %>
    </div>

    <div class="actions">
      <%= form.submit "Create Parcel" %>
    </div>
  <% end %>
</div>
